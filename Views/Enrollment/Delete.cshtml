@model SwimmingLessonManagementSystem.Models.EnrollmentDto

@{
    ViewBag.Title = "Delete Enrollment";
}

<h2>Delete Enrollment</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Enrollment ID</dt>
        <dd>@Model.EnrollmentID</dd>
        <dt>Enrollment Date</dt>
        <dd>@Model.EnrollmentDate.ToShortDateString()</dd>
        <dt>Lesson Title</dt>
        <dd>@Model.LessonTitle</dd>
        <dt>Student Name</dt>
        <dd>@Model.StudentName</dd>
        <dt>Progress</dt>
        <dd>@Model.Progress</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
