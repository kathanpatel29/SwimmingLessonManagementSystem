@model SwimmingLessonManagementSystem.Models.EnrollmentDto

@{
    ViewBag.Title = "Delete Enrollment";
}

<h2>Delete Enrollment</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Lesson</dt>
        <dd>@Model.LessonTitle</dd>

        <dt>Student</dt>
        <dd>@Model.StudentName</dd>

        <dt>Progress</dt>
        <dd>@Model.Progress</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href="@Url.Action("List", "Enrollment")" class="btn btn-default">Back to List</a>
        </div>
    }
</div>
