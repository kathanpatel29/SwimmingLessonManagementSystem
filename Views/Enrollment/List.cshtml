@model IEnumerable<SwimmingLessonManagementSystem.Models.EnrollmentDto>

@{
    ViewBag.Title = "Enrollment List";
}

<h2>Enrollment List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lesson</th>
            <th>Student</th>
            <th>Progress</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>
                <td>@enrollment.LessonTitle</td>
                <td>@enrollment.StudentName</td>
                <td>@enrollment.Progress</td>
                <td>
                    <a href="@Url.Action("Details", "Enrollment", new { id = enrollment.EnrollmentID })">Details</a> |
                    <a href="@Url.Action("Edit", "Enrollment", new { id = enrollment.EnrollmentID })">Edit</a> |
                    <a href="@Url.Action("Delete", "Enrollment", new { id = enrollment.EnrollmentID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Enrollment")" class="btn btn-primary">Create New Enrollment</a>
