@model IEnumerable<SwimmingLessonManagementSystem.Models.EnrollmentDto>

<h2>Enrollments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>Enrollment ID</th>
        <th>Lesson ID</th>
        <th>Lesson Title</th>
        <th>Student ID</th>
        <th>Student Name</th>
        <th>Progress</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EnrollmentID</td>
            <td>@item.LessonID</td>
            <td>@item.LessonTitle</td>
            <td>@item.StudentID</td>
            <td>@item.StudentName</td>
            <td>@item.Progress</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
            </td>
        </tr>
    }
</table>
