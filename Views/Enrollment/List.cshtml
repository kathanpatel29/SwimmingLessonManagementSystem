@model IEnumerable<SwimmingLessonManagementSystem.Models.EnrollmentDto>

@{
    ViewBag.Title = "Enrollment List";
}

<h2>Enrollment List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Enrollment ID</th>
            <th>Enrollment Date</th>
            <th>Lesson Title</th>
            <th>Student Name</th>
            <th>Progress</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EnrollmentID</td>
                <td>@item.EnrollmentDate.ToShortDateString()</td>
                <td>@item.LessonTitle</td>
                <td>@item.StudentName</td>
                <td>@item.Progress</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
