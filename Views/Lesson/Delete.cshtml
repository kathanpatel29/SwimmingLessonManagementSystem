﻿@model SwimmingLessonManagementSystem.Models.LessonDto

<h2>Delete Lesson</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.LessonID</dd>
        <dt>Title</dt>
        <dd>@Model.Title</dd>
