@model IEnumerable<SwimmingLessonManagementSystem.Models.LessonDto>

@{
    ViewBag.Title = "List of Lessons";
}

<h2>List of Lessons</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Time</th>
        <th>Instructor</th>
        <th>Capacity</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Date)</td>
            <td>@Html.DisplayFor(modelItem => item.Time)</td>
            <td>@Html.DisplayFor(modelItem => item.InstructorName)</td>
            <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.LessonID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.LessonID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LessonID })
            </td>
        </tr>
    }

</table>
